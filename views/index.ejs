<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Cutter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <h1>Url Cutter</h1>
    <form action="/shortUrl" class="row g-3 my-4 form-inline" method="post">
        <div class="col-auto">
          <label for="fullUrl" class="visually-hidden">Url</label>
          <input type="url" required class="form-control" name="fullUrl"id="fullUrl" placeholder="Url">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Cut!!</button>
        </div>
      </form>
    <table class="table table-striped">
        <thead>
            <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% for (var i=0; i<urls.length; i++) {  %>
            <tr>
                <td><a href="<%= urls[i].full %>"> <%= urls[i].full %> </a></td>
                <td><a href="/<%= urls[i].short %>"> <%= urls[i].short %> </a></td>
                <td><%= urls[i].click %></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
</body>
</html>